{
  "manifest_version": 3,
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "version": "0.0.1",
  "default_locale": "en",
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_icon": {
      "19": "img/disabled.png",
      "38": "img/disabled@2x.png"
    },
    "default_title": "__MSG_extName__"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "js": [
        "js/content.js"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ]
}